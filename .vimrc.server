syntax on
filetype plugin on
filetype indent on

set mouse=ni
set t_Co=256
set background=dark
set backspace=indent,eol,start
set laststatus=2
set smartcase
set showcmd
set ts=2
set sw=2
set cindent
set incsearch
set nu
set history=1000
set autoread
set foldmethod=manual
set cm=blowfish
set thesaurus+=~/.vim/mthesaur.txt
set hidden
